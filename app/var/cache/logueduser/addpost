	if(keywordsElements.length > 15){
		error = true;
		return; 
	}
	for(let keyword of keywordsElements){
		if(stringIsCorrect(keyword.value)){
			keywords.push(keyword.value)
		}else{
			alert("Hay keywords vac√≠as.")
			return;
		}
	}

	if(post.metaTitle.length < 30 || post.metaTitle > 65){
		error = true; 
